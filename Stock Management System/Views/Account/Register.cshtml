@using Stock_Management_System.ViewModels
@model RegisterViewModels
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<br />
<br />

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <style>
        body {
            background-color: #DEE3E9;
        }
        #intro {
            background-image: url("https://images.fineartamerica.com/images-medium-large-5/cosmic-om-richard-copeland.jpg");
            height: 100vh;
        }
    </style>
    <title>Sign Up</title>
</head>

<body>
    <div class="bg-light">
        <br>
        <div class="text-center">
            <img src="https://www.pngitem.com/pimgs/m/264-2640106_inventory-management-system-logo-hd-png-download.png"
                 class="img-thumbnail mx-auto" style="height: 11%; width: 11%;" alt="logo">
        </div>
        <p class="text-center text-dark fw-bold fs-2">LET'S CREATE AN ACCOUNT</p>
        <div class="container text-center">
            <div class="row g-2">
                <div class="col-7">
                    <div class="p-3">
                        <form class="row g-3">
                            <div class="d-grid gap-2 mx-auto col-md-8">
                                <input type="text" class="form-control" placeholder="Name" aria-label="Name"
                                       required>
                            </div>
                            <div class="d-grid gap-2 mx-auto col-md-8">
                                <input type="email" class="form-control" placeholder="Username"
                                       aria-label="Username" required>
                            </div>
                            <div class="d-grid gap-2 mx-auto col-md-8">
                                <input type="email" class="form-control" placeholder="Email" aria-label="Email"
                                       required>
                            </div>
                            <div class="d-grid gap-2 mx-auto col-md-8">
                                <input type="password" class="form-control" placeholder="Password" aria-label="Password"
                                       required>
                            </div>
                            <div class="d-grid gap-2 mx-auto col-md-8">
                                <input type="password" class="form-control" placeholder="Re Enter Password"
                                       aria-label="Password" required>
                            </div>
                            <br>
                            <div class="form-check gap-2 mx-auto col-md-8">
                                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                                <label class="form-check-label" for="flexCheckDefault">
                                    I agree that above mentioned informations are valid
                                </label>
                            </div>
                            <div class="d-grid gap-2 col-6 mx-auto">
                                <button class="btn btn-primary fs-4 fw-bold" type="button">Sign Up</button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-5">
                    <img src="https://www.netsuite.com/portal/assets/img/business-articles/inventory-management/infographic-business-solutions-retail-inventory-management.png"
                         class="img-fluid" style="height: 70%;" alt="bg_pic">
                </div>
            </div>
        </div>
    </div>

</body>

</html>

<br />
<br />
<br />
<br />
<br />


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}