<!DOCTYPE html>

<html lang="en" data-bs-theme="Light">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <meta charset="utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Stock_Management_System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Stock_Management_System.styles.css" asp-append-version="true" />
    
    <style>
        header {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
        }
        footer{
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-toggler navbar navbar-expand-sm navbar-toggleable-sm" style="background-color: #000080; font-size:22px; font-family:Adamina " data-bs-theme="dark">
            <div class="container-fluid">
                <!-- Your Logo -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="https://th.bing.com/th/id/OIP.rfrrCinbvDKXF4eLBqXuCAHaH2?rs=1&pid=ImgDetMain" alt="Logo" height="50" width="50" class="d-inline-block align-text-top rounded-circle">
                </a>


                <!-- Navbar Toggler Button -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar Content -->
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Dashboard" asp-action="Dashboard">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="ProductManagement" asp-action="ViewAll">Inventory</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Supplier" asp-action="SuppliersData">Supplier</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="" asp-action="">Notification</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="" asp-action="">Customer Support</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="" asp-action="">Contact Us</a>
                        </li>
                    </ul>
                    <div class="d-flex">
                      <a class="btn btn-secondary mx-2" asp-area="" asp-controller="Home" asp-action="Index">
                            Sign Out
                            </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
   <footer class="border-top footer text-light" style="background-color: #000080; font-size:16px; font-family:Adamina">
        <center>
            <div>
                Send us an Email (or) Call us: India - 9090909090 ( Monday - Friday 9:00AM to 7:00PM )
            </div>
            <div>
                © 2024, Store Stock Management System. All Rights Reserved. - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </center>
    </footer>
  
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
