@model Stock_Management_System.Models.SellItems
@{
    ViewData["Title"] = "SellManagement";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}


<nav class="navbar navbar-expand-lg navbar-expand-sm navbar-light bg-light">
    <div class="container">
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="ProductManagement" asp-action="Purchase">Buy Items</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="ProductManagement" asp-action="SellManagement">Sell Items</a>
                </li>
            </ul>
        </div>
    </div>
</nav>


<div class="container">
    <h2>Sell Items</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-controller="OrderManagement" asp-action="SellManagement" method="post" class="row g-3">
               @*  <div class="col-md-6">
                    <label asp-for="Id" class="form-label"></label>
                    <input asp-for="Id" class="form-control" />
                </div> *@
                <div class="col-md-6">
                    <label asp-for="Customer_Name" class="form-label">Customer Name</label>
                    <input asp-for="Customer_Name" class="form-control " placeholder="Enter Name" style="border-radius:10px;" />
                </div>
                <div class="col-md-6">
                    <label asp-for="Phone_Number" class="form-label"> Phone Number</label>
                    <input asp-for="Phone_Number" class="form-control" placeholder="Enter Phone number" style="border-radius:10px;" />
                </div>
                <div class="col-md-6">
                    <label asp-for="Address" class="form-label">Address</label>
                    <input asp-for="Address" class="form-control" style="border-radius:10px;" />
                </div>
                <div class="col-md-6">
                    <label asp-for="Product_Name" class="form-label">Product Name</label>
                    <input asp-for="Product_Name" class="form-control" style="border-radius:10px;" />
                </div>
                <div class="col-md-6">
                    <label asp-for="Product_Price" class="form-label">Product Price</label>
                    <input asp-for="Product_Price" class="form-control" style="border-radius:10px;" />
                </div>
                <div class="col-md-6">
                    <label asp-for="Items" class="form-label">No. of Items</label>
                    <input asp-for="Items" class="form-control" style="border-radius:10px;" />
                </div>
                <div class="text-center btn">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
